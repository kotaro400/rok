<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? "#{yield(:title)} | PoK" : "PoK"%></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />
    <meta name="turbolinks-cache-control" content="no-cache">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC:300" rel="stylesheet">
    <%= favicon_link_tag "/logo.png" %>
    <link rel="apple-touch-icon" href="/logo2.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="og:title" content="<%= full_title(yield(:title)) %>" />
    <meta property="og:url" content="<%= request.url %>" />
    <meta property="og:description"
      content="<%= content_for?(:description) ? yield(:description) : 'Prosperity of Kingdoms' %>" />
    <meta property="og:image"
      content="<%= content_for?(:image_url) ? yield(:image_url) : full_url('logo2.png') %>" />
  </head>

  <body>
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <% if current_user %>
      <div class="pc-content">
        <%= yield %>
      </div>
      <%= render "application/pc_menu"%>
    <% else %>
      <div class="content">
        <%= yield %>
      </div>
    <% end %>
  </body>
</html>
